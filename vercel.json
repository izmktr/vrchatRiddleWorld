{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb"
      }
    },
    {
      "src": "api/thumbnail.py", 
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "10mb"
      }
    },
    {
      "src": "web/package.json",
      "use": "@vercel/next",
      "config": {
        "distDir": ".next"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/thumbnail/(.*)",
      "dest": "/api/thumbnail.py"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/index.py"
    },
    {
      "src": "/(.*)",
      "dest": "/web/$1"
    }
  ],
  "env": {
    "PYTHON_VERSION": "3.9"
  },
  "installCommand": "cd web && npm install",
  "buildCommand": "cd web && npm run build"
}